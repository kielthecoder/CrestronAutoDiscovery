// #ANALOG_SERIAL_EXPAND 

/*
#HELP_BEGIN
   (add additional lines of help lines)
#HELP_END
*/

// LIBRARIES ///////////////////////////////////////////////////////////////////////////////

#USER_SIMPLSHARP_LIBRARY "AutoDiscoveryLib"

// INPUTS //////////////////////////////////////////////////////////////////////////////////

STRING_INPUT Address[255];
ANALOG_INPUT Port;

DIGITAL_INPUT Start;
DIGITAL_INPUT Stop;

STRING_INPUT  My_ID[255];
STRING_INPUT  My_Address[255];

// OUTPUTS /////////////////////////////////////////////////////////////////////////////////

DIGITAL_OUTPUT Active_Fb;

// SOCKETS /////////////////////////////////////////////////////////////////////////////////

// PARAMETERS //////////////////////////////////////////////////////////////////////////////

// STRUCTURES //////////////////////////////////////////////////////////////////////////////

DiscoveryAgent Discovery;

// GLOBAL VARIABLES ////////////////////////////////////////////////////////////////////////

// FUNCTIONS ///////////////////////////////////////////////////////////////////////////////

// EVENT HANDLERS //////////////////////////////////////////////////////////////////////////

THREADSAFE PUSH Start
{
	Discovery.Start(Address, Port);
	Active_Fb = Discovery.Active;
}

THREADSAFE PUSH Stop
{
	Discovery.Stop();
	Active_Fb = Discovery.Active;
}

CHANGE My_ID
{
	Discovery.ID = My_ID;
}

CHANGE My_Address
{
	Discovery.Address = My_Address;
}

// CALLBACKS AND DELEGATES /////////////////////////////////////////////////////////////////

// MAIN ////////////////////////////////////////////////////////////////////////////////////

FUNCTION Main()
{
	WaitForInitializationComplete();
}
